{
  "name": "ebsi-onboarder",
  "version": "1.0.0",
  "description": "EBSI Ledger Onboarding Service",
  "scripts": {
    "dev": "nodemon -L --nolazy app/server.js",
    "test": "cross-env NODE_ENV=test jest --testTimeout=100000",
    "test:reload": "cross-env NODE_ENV=test jest __tests__ --watch --testTimeout=100000 --maxWorkers=1",
    "start": "node app/server.js"
  },
  "type": "module",
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@cef-ebsi/ebsi-did-resolver": "^4.0.3",
    "@cef-ebsi/key-did-resolver": "^2.0.4",
    "@cef-ebsi/verifiable-credential": "^6.1.1",
    "@cef-ebsi/verifiable-presentation": "^7.1.1",
    "@cef-ebsi/wallet-lib": "^5.0.6",
    "did-jwt": "^8.0.4",
    "express": "^4.21.1",
    "jose": "^5.9.6",
    "nodemon": "^3.1.7"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "transform": {
      "^.+\\.[tj]sx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "supertest": "^7.0.0"
  }
}
